---
import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import ChargeSection from '../components/ChargeSection.astro';
import ChargeSection2 from '../components/ChargeSection2.astro';
import ChargeSection3 from '../components/ChargeSection3.astro';
import ChargeSection4 from '../components/ChargeSection4.astro';
import ChargeSection5 from '../components/ChargeSection5.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Ushuaia.">
	<LandingHeader />
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ChargeSection />
		</div>
		<div class="snap-center">
			<ChargeSection2 />
		</div>
		<div class="snap-center">
			<ChargeSection3 />
		</div>
		<div class="snap-center">
			<ChargeSection4 />
		</div>
		<div class="snap-center">
			<ChargeSection5 />
		</div>
	</main>
	<audio id="audio" autoplay >
		<source src="../../public/musicBg.weba" type="audio/mpeg">
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
			<path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 010 12.728M16.463 8.288a5.25 5.25 0 010 7.424M6.75 8.25l4.72-4.72a.75.75 0 011.28.53v15.88a.75.75 0 01-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.01 9.01 0 012.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75z" />
		</svg>  
	</audio>
</Layout>