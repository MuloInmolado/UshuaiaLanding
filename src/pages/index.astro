---
import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import ChargeSection from '../components/ChargeSection.astro';
import ChargeSection2 from '../components/ChargeSection2.astro';
import ChargeSection3 from '../components/ChargeSection3.astro';
import ChargeSection4 from '../components/ChargeSection4.astro';
import ChargeSection5 from '../components/ChargeSection5.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Ushuaia.">
	<LandingHeader />
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ChargeSection />
		</div>
		<div class="snap-center">
			<ChargeSection2 />
		</div>
		<div class="snap-center">
			<ChargeSection3 />
		</div>
		<div class="snap-center">
			<ChargeSection4 />
		</div>
		<div class="snap-center">
			<ChargeSection5 />
		</div>
	</main>
</Layout>